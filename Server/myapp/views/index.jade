extends layout

block content
	.container
		h1 #{title}
		table.table.table-striped
			thead
				tr
					td 标题
					td 词云
					td 结构树
					td 状态 
			tbody
				for i in list
					tr 
						td 
							a(href='/text?title=#{i.title}') #{i.title}
						td 
							-if (i.status == 'Computing...')
									p 词云
							-else
									a(href='/cloud?title=#{i.title}') 词云
						td
							-if (i.status == 'Computing...')
									p 结构树
							-else
									a(href='/tree?title=#{i.title}') 结构树
						td #{i.status}

block append head
	link(rel='stylesheet', href='/stylesheets/cluster_dendrogram.css')
